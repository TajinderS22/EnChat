generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id          Int @default(autoincrement()) @id
  username    String 
  firstname   String 
  lastname    String?
  password    String
  email       String
  createdAt   DateTime @default(now())
  
  // relation to chats
  chats       Chats[] 

  
}

model Chats{
  id        Int @default(autoincrement())  @id
  userId    Int
  message   String

  // Relating Chats to user {this  is  one to may relation}

  user      User @relation(fields:[userId], references: [id])
}